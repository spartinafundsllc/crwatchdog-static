{% set latestItems = collections.homepageLatest or [] %}
{% set carsItems = collections.latestCars or [] %}

{# ----------------------------
   Compute dynamic blocks for "Latest Articles"
   - Uses collections.homepageLatest
   - Falls back to the seed content above if needed
   ---------------------------- #}

{% set latestMainItem = latestItems[0] %}
{% if latestMainItem %}
  {% set latest_main = {
    title: latestMainItem.data.title,
    url: latestMainItem.url,
    img: (latestMainItem.data.image or latestMainItem.data.featured_image or latest_main_fallback.img),
    cat: (latestMainItem.data.category or latest_main_fallback.cat),
    excerpt: (latestMainItem.data.description or latestMainItem.data.excerpt or "")
  } %}
{% else %}
  {% set latest_main = latest_main_fallback %}
{% endif %}
<div class="site-inner">
  <div class="content-sidebar-wrap">
    <main class="content">

      <div id="home-main-featured" class="home-main-featured">
        <section id="featured-post-2" class="widget featured-content featuredpost">
          <div class="widget-wrap">
            <article class="entry has-post-thumbnail" aria-label="{{ hero.title }}">
              <a href="{{ hero.url }}" class="aligncenter" aria-hidden="true" tabindex="-1">
                <img src="{{ hero.img }}" class="entry-image attachment-post" alt="">
              </a>
              <header class="entry-header">
                <h2 class="entry-title"><a href="{{ hero.url }}">{{ hero.title }}</a></h2>
              </header>
              <div class="entry-content">
                <p>{{ hero.excerpt }} <a href="{{ hero.url }}" class="more-link">Read More</a></p>
              </div>
            </article>
          </div>
        </section>

        <section class="widget category-block widget_custom_html">
          <div class="widget-wrap">
            <div class="textwidget custom-html-widget">
              <div class="cw-categories">
                {% for c in categories %}
                  <div class="category">
                    <img src="{{ c.img }}" alt="">
                    {{ c.label }}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </section>
      </div>

    </main>
  </div>
</div>

{# =========================
   LATEST ARTICLES (outside main.content)
   ========================= #}
<div id="home-featured-post-1" class="home-featured-post-1">

  <section class="widget title-widget widget_custom_html">
    <div class="widget-wrap">
      <div class="textwidget custom-html-widget">
        <h2 class="home-section-title">
          <span>Latest</span><br>Articles
        </h2>
      </div>
    </div>
  </section>

  <section id="featured-post-3" class="widget main-post widget featured-content featuredpost">
    <div class="widget-wrap">
      <article class="entry has-post-thumbnail" aria-label="{{ latest_main.title }}">
        <a href="{{ latest_main.url }}" class="aligncenter" aria-hidden="true" tabindex="-1">
          <img src="{{ latest_main.img }}" class="entry-image attachment-post" alt="">
        </a>
        <header class="entry-header">
          <h2 class="entry-title"><a href="{{ latest_main.url }}">{{ latest_main.title }}</a></h2>
        </header>
      </article>
    </div>
  </section>

  <section id="featured-post-4" class="widget two-column-post widget featured-content featuredpost">
    <div class="widget-wrap">
      {# Dynamic: next two newest posts (after the main one) #}
      {% set latestTwoDynamic = latestItems.slice(1, 3) %}

      {% for item in latestTwoDynamic %}
        {% set p = {
          title: item.data.title,
          url: item.url,
          img: (item.data.image or item.data.featured_image or latest_main_fallback.img),
          cat: (item.data.category or "")
        } %}
        <article class="entry has-post-thumbnail" aria-label="{{ p.title }}">
          <a href="{{ p.url }}" class="aligncenter" aria-hidden="true" tabindex="-1">
            <img src="{{ p.img }}" class="entry-image attachment-post" alt="">
          </a>
          <header class="entry-header">
            <h2 class="entry-title"><a href="{{ p.url }}">{{ p.title }}</a></h2>
            {% if p.cat %}<p class="entry-meta"><span class="entry-categories">{{ p.cat }}</span></p>{% endif %}
          </header>
        </article>
      {% endfor %}

      {# Fallback: fill remaining slots (if fewer than 2 dynamic items) #}
      {% if latestTwoDynamic.length < 2 %}
        {% set remaining = 2 - latestTwoDynamic.length %}
        {% for p in latest_two_fallback %}
          {% if loop.index0 < remaining %}
            <article class="entry has-post-thumbnail" aria-label="{{ p.title }}">
              <a href="{{ p.url }}" class="aligncenter" aria-hidden="true" tabindex="-1">
                <img src="{{ p.img }}" class="entry-image attachment-post" alt="">
              </a>
              <header class="entry-header">
                <h2 class="entry-title"><a href="{{ p.url }}">{{ p.title }}</a></h2>
                {% if p.cat %}<p class="entry-meta"><span class="entry-categories">{{ p.cat }}</span></p>{% endif %}
              </header>
            </article>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </section>

  <section id="featured-post-5" class="widget three-column-post widget featured-content featuredpost">
    <div class="widget-wrap">
      {# Dynamic: next three newest posts (after main + two-column) #}
      {% set latestThreeDynamic = latestItems.slice(3, 6) %}

      {% for item in latestThreeDynamic %}
        {% set p = {
          title: item.data.title,
          url: item.url,
          img: (item.data.image or item.data.featured_image or latest_main_fallback.img),
          cat: (item.data.category or ""),
          excerpt: (item.data.description or item.data.excerpt or "")
        } %}
        <article class="entry has-post-thumbnail" aria-label="{{ p.title }}">
          <a href="{{ p.url }}" class="alignnone" aria-hidden="true" tabindex="-1">
            <img src="{{ p.img }}" class="entry-image attachment-post" alt="">
          </a>
          <header class="entry-header">
            <h2 class="entry-title"><a href="{{ p.url }}">{{ p.title }}</a></h2>
            {% if p.cat %}<p class="entry-meta"><span class="entry-categories">{{ p.cat }}</span></p>{% endif %}
          </header>
          {% if p.excerpt %}
          <div class="entry-content">
            <p>{{ p.excerpt }} <a href="{{ p.url }}" class="more-link">Read More</a></p>
          </div>
          {% endif %}
        </article>
      {% endfor %}

      {# Fallback: fill remaining slots (if fewer than 3 dynamic items) #}
      {% if latestThreeDynamic.length < 3 %}
        {% set remaining = 3 - latestThreeDynamic.length %}
        {% for p in latest_three_fallback %}
          {% if loop.index0 < remaining %}
            <article class="entry has-post-thumbnail" aria-label="{{ p.title }}">
              <a href="{{ p.url }}" class="alignnone" aria-hidden="true" tabindex="-1">
                <img src="{{ p.img }}" class="entry-image attachment-post" alt="">
              </a>
              <header class="entry-header">
                <h2 class="entry-title"><a href="{{ p.url }}">{{ p.title }}</a></h2>
                {% if p.cat %}<p class="entry-meta"><span class="entry-categories">{{ p.cat }}</span></p>{% endif %}
              </header>
              {% if p.excerpt %}
              <div class="entry-content">
                <p>{{ p.excerpt }} <a href="{{ p.url }}" class="more-link">Read More</a></p>
              </div>
              {% endif %}
            </article>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </section>

</div>

