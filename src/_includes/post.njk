---
layout: layouts/base.njk
---

<article>
  <header style="margin: 8px 0 18px;">
    <h1 style="line-height: 1.1; margin-bottom: 10px;">{{ title }}</h1>

    <div style="font-size: 14px; opacity: 0.8;">
      {% if date %}
        <time datetime="{{ date | date('yyyy-MM-dd') }}">{{ date | date('MMMM d, yyyy') }}</time>
      {% endif %}
      {% if updated and updated != date %}
        · Updated <time datetime="{{ updated | date('yyyy-MM-dd') }}">{{ updated | date('MMMM d, yyyy') }}</time>
      {% endif %}
      {% if author %}
        · {{ author }}
      {% endif %}
    </div>

    {% if description %}
      <p style="margin-top: 12px; font-size: 18px; opacity: 0.95;">
        {{ description }}
      </p>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  {% if tags %}
    <hr style="margin: 28px 0;" />
    <div style="font-size: 14px; opacity: 0.85;">
      <strong>Tags:</strong>
      {% for t in tags %}
        <span style="margin-right: 10px;">{{ t }}</span>
      {% endfor %}
    </div>
  {% endif %}
</article>
