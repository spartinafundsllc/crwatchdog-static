---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# 1) URLs generated by Eleventy (new Markdown pages/posts) #}
  {% for page in collections.all %}
    {% if page.url and page.data and page.data.eleventyExcludeFromCollections != true %}
      {% if page.url != "/sitemap.xml" and page.url != "/wp-sitemap.xml" %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
  </url>
      {% endif %}
    {% endif %}
  {% endfor %}

  {# 2) URLs discovered from your legacy static export #}
  {% for url in staticUrls %}
    {# Avoid duplicating pages Eleventy already outputs #}
    {% if url != "/sitemap.xml" and url != "/wp-sitemap.xml" %}
  <url>
    <loc>{{ site.url }}{{ url }}</loc>
  </url>
    {% endif %}
  {% endfor %}
</urlset>